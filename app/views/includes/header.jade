.header
    .row
        .col-md-5
            .ul.hr
                li Внесены 
                    a(href='#' onclick='vneseni()') #{vneseni}
                li Не внесены 
                    a(href='#' onclick='ne_vneseni()') #{ne_vneseni}
                li На рассмотрении 
                    a(href='#' onclick='rassmotrenie()') #{rassmotrenie}
        .col-md-3
            if (session.admin)
                .p
                    | #{session.admin.name}, Администратор
                input(id='user_type', style='display:none', value='admin')
            if (session.user)
                .p
                    | #{session.user.name}, Пользователь
                input(id='user_type', style='display:none', value='user')
        .col-md-4(align='right')
            a(href='/logout') Выйти